<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/myred">

        <TextView
            android:textSize="22sp"
            android:gravity="center"
            style="@style/text_14sp_white"
            android:text="分类"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingBottom="7dp"
            android:paddingLeft="34dp"
            android:paddingRight="16dp"
            android:paddingTop="7dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/home_search"
            android:id="@+id/search_img"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1px">
        <ListView
            android:scrollbars="none"
            android:cacheColorHint="#00000000"
            android:divider="@color/transparency"
            android:dividerHeight="0px"
            android:listSelector="@color/transparency"
            android:id="@+id/classify_list"
            android:layout_width="100dp"
            android:layout_height="match_parent">
        </ListView>
        <android.support.v7.widget.RecyclerView
            android:paddingBottom="10dp"
            android:layout_marginTop="48dp"
            android:scrollbars="none"
            android:id="@+id/classify_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/classify_list"
            android:layout_toRightOf="@id/classify_list"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</LinearLayout>