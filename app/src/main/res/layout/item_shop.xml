<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <com.base.views.MyOvalImageView
        android:src="@mipmap/center_head"
        app:myradius="100dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="center"
        android:id="@+id/item_img"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/item_shopname_tv"/>

        <TextView
            style="@style/text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/mygray"
            android:id="@+id/item_name_tv"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/text_14sp_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="访问量"
                android:textColor="@color/mygray"/>
            <TextView
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                style="@style/text_14sp_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/item_views_tv"/>
            <TextView
                style="@style/text_14sp_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共"
                android:textColor="@color/mygray"/>
            <TextView
                android:gravity="center"
                style="@style/text_14sp_red"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/item_num_tv"/>
            <TextView
                android:layout_marginRight="10dp"
                style="@style/text_14sp_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件商品"
                android:textColor="@color/mygray"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        style="@style/text_14sp_red"
        android:textSize="18sp"
        android:background="@drawable/shape_intoshop"
        android:text="进店"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_into_tv"/>
</LinearLayout>