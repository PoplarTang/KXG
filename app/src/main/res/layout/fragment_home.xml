<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mybg"
              android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/myred">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/home_logo"/>

        <ImageView
            android:id="@+id/home_search_img"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingBottom="7dp"
            android:paddingLeft="34dp"
            android:paddingRight="16dp"
            android:paddingTop="7dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/home_search"/>
    </RelativeLayout>

    <com.base.refreshlayout.RefreshLayout
        android:id="@+id/home_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.base.views.MyScrollView
            android:id="@+id/home_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <com.base.views.MyViewPager
                        android:background="@mipmap/solid_banner"
                        android:id="@+id/home_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </com.base.views.MyViewPager>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/home_rdbtn1"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/sl_viewpager_dot"
                            android:button="@null"
                            android:checked="false"
                            android:visibility="gone"/>

                        <RadioButton
                            android:id="@+id/home_rdbtn2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/sl_viewpager_dot"
                            android:button="@null"
                            android:checked="false"
                            android:visibility="gone"/>

                        <RadioButton
                            android:id="@+id/home_rdbtn3"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/sl_viewpager_dot"
                            android:button="@null"
                            android:checked="false"
                            android:visibility="gone"/>

                        <RadioButton
                            android:id="@+id/home_rdbtn4"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/sl_viewpager_dot"
                            android:button="@null"
                            android:checked="false"
                            android:visibility="gone"/>
                    </RadioGroup>
                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_rv"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/white">
                </android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home_img1"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/myblue"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/myline"/>

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_img2"
                            android:layout_width="160dp"
                            android:layout_height="60dp"
                            android:background="@color/myblue"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/myline"/>

                        <ImageView
                            android:id="@+id/home_img3"
                            android:layout_width="160dp"
                            android:layout_height="60dp"
                            android:background="@color/myblue"/>
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/home_rv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/myred">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </com.base.views.MyScrollView>
    </com.base.refreshlayout.RefreshLayout>
</LinearLayout>