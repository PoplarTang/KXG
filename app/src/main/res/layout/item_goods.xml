<?xml version="1.0" encoding="utf-8"?>
<com.base.views.RoundLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:mylayoutbg="@color/mybg"
    app:mylayoutradius="4dp">

    <com.base.views.ScaleImageView
        app:myScale="1"
        android:id="@+id/item_nine_img"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@mipmap/solid_goods"/>

    <TextView
        android:layout_marginTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@color/myblack"
        android:textSize="15sp"
        android:id="@+id/item_info_tv"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            style="@style/text_15sp_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17sp"
            android:id="@+id/item_money_tv"/>

        <ImageView
            android:scaleType="fitCenter"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:src="@mipmap/flow"/>

        <TextView
            android:layout_marginLeft="3dp"
            style="@style/text_14sp_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/mygray"
            android:textSize="15sp"
            android:id="@+id/item_love_tv"/>
    </LinearLayout>
</com.base.views.RoundLayout>