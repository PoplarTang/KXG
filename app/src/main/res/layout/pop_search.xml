<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/search_ic"/>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_search_pop_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pop_search_goods"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:gravity="center">

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/search_goods"/>
            <TextView
                style="@style/text_15sp_white"
                android:text="商品"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/pop_search_article"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:gravity="center">

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/search_article"/>
            <TextView
                style="@style/text_15sp_white"
                android:text="文章"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/pop_search_shop"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:gravity="center">

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/search_shop"/>
            <TextView
                style="@style/text_15sp_white"
                android:text="店铺"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>